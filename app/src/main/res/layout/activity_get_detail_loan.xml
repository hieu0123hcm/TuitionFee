<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GetDetailLoanActivity"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Loan Detail"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/blue_800"
        android:layout_marginBottom="20dp"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:text="Student ID: "
            android:textStyle="normal"
            android:gravity="center"
            android:textSize="15dp"/>

        <EditText
            android:id="@+id/txtStudentid1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="13dp"
            android:textStyle="bold"

            android:textAlignment="center"
            android:editable="false"
            android:textColor="@color/blue_800"
            android:layout_marginBottom="2dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:text="Loan status: "
            android:gravity="center"
            android:textSize="15dp"/>

        <EditText
            android:id="@+id/txtLoanstatus1"
            android:editable="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="13dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/blue_800"
            android:layout_marginBottom="2dp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="150dp"

            android:layout_height="20dp"
            android:text="Start Date: "
            android:gravity="center"
            android:textSize="15dp"/>

        <EditText
            android:id="@+id/txtStartDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="13dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:editable="false"
            android:textColor="@color/blue_800"
            android:layout_marginBottom="2dp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:text="Expired Date: "
            android:gravity="center"
            android:textSize="15dp"/>

        <EditText
            android:id="@+id/txtExpireddate1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="13dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:editable="false"
            android:textColor="@color/blue_800"
            android:layout_marginBottom="2dp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:text="Rate: "
            android:gravity="center"
            android:textSize="15dp"/>

        <EditText
            android:id="@+id/txtBundleRate"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="13dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:editable="false"
            android:textColor="@color/blue_800"
            android:layout_marginBottom="2dp"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:text="Month: "
            android:gravity="center"
            android:textSize="15dp"/>

        <EditText
            android:id="@+id/txtBundleMonth"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="13dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:editable="false"
            android:textColor="@color/blue_800"
            android:layout_marginBottom="2dp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:text="Amount: "
            android:gravity="center"
            android:textSize="15dp"/>

        <EditText
            android:id="@+id/txtAmount1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:editable="false"
            android:layout_gravity="center"
            android:textSize="13dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/blue_800"
            android:layout_marginBottom="2dp"/>

    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:text="Amount Returned: "
            android:gravity="center"
            android:textSize="15dp"/>

        <EditText
            android:id="@+id/txtAmountreturned1"
            android:editable="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="13dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/blue_800"
            android:layout_marginBottom="2dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:text="Amount Remaining: "
            android:gravity="center"
            android:textSize="15dp"/>

        <EditText
            android:id="@+id/txtRemainingAmount"
            android:editable="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="13dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/blue_800"
            android:layout_marginBottom="2dp"/>

    </LinearLayout>
        <TextView
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Transactions"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="@color/blue_800"
            android:textAlignment="center"
            android:background="@color/orange_500"
            />
    <ListView
       android:background="@color/blue_700"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lvTransaction"
        />

</LinearLayout>