<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".studentActivities.ReminderDetailActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Reminder Detail"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/blue_800"
        android:layout_marginBottom="20dp"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:text="Loan ID: "
            android:textStyle="normal"
            android:gravity="center"
            android:textSize="15dp"/>

        <EditText
            android:id="@+id/txtLoanID2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="13dp"
            android:textStyle="bold"

            android:textAlignment="center"
            android:editable="false"
            android:textColor="@color/blue_800"
            android:layout_marginBottom="2dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:text="Amount :"
            android:gravity="center"
            android:textSize="15dp"/>

        <EditText
            android:id="@+id/txtAmount2"
            android:editable="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="13dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/blue_800"
            android:layout_marginBottom="2dp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="150dp"

            android:layout_height="20dp"
            android:text="Send Date: "
            android:gravity="center"
            android:textSize="15dp"/>

        <EditText
            android:id="@+id/txtSendDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="13dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:editable="false"
            android:textColor="@color/blue_800"
            android:layout_marginBottom="2dp"/>

    </LinearLayout>
    <Button
        android:text="Make A Payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="makePayment"
        android:layout_gravity="center"/>

</LinearLayout>