<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".studentActivities.StudentMenuActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="50dp"
        android:text="Student Board"
        android:textAlignment="center"
        android:textColor="@color/blue_800"
        android:textSize="25dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <Button
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:onClick="goToViewReStudyCourse"
            android:text="View Re-study Course"
            />

        <Button
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:onClick="goToGetLoanList"
            android:text="View Loans"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:onClick="goToPayment"
            android:text="View Payments" />

        <Button
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:onClick="goToStuProfile"
            android:text="View Profile" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <Button
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:onClick="goToCreateLoan"
            android:text="Request Loan" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtNewReminder"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_gravity="center"
        />
    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/listViewReminder"/>

</LinearLayout>